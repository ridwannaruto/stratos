    <artifactId>org.apache.stratos.cep.310.extension</artifactId>
    <name>Apache Stratos - CEP Extensions</name>
    <description>Apache Stratos CEP Extensions</description>

    <repositories>
        <repository>
            <id>wso2-maven2-repository</id>
